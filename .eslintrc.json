{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": "eslint-config-edx-es5",
    "rules": {
        "no-new": 0,
        "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["journals"] }],
        "no-underscore-dangle": ["error", { "allow": ["_super"] }],
        "no-tabs": 0,
        "indent": [2, "tab"]
    },
    "globals": {
        "gettext": true,
        "loadFixtures": true,
        "spyOnEvent": true
    },
    "parser": "babel-eslint"
}
